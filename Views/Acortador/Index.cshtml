@{
    ViewData["Title"] = "Home Page";
}
@model Acortador

<article class="text-center container my-5">
    <div class="row justify-content-center align-content-center">
        <form class="col-5 p-3" method="post" action="/Acortador/CrearAcortador">
            <div class=" text-start my-2 ">
                <label for="link" class="form-check px-0">Ingrese el link a acortar:</label>
                <input type="text" id="link" name="link" value="@Model?.Link" class="form-control" />
            </div>
            <div class="my-2">
                <button type="submit" class="btn btn-primary w-100">Acortar</button>
            </div>
        </form>
    </div>
</article>

@if (ViewBag.Qr != null)
{
    <section class="container">
        <div class="row justify-content-center align-content-center">
            <p class="col-4 align-self-center">https:localhost:7234/@Model?.Id</p>
            <figure class="col-4">
                <img src="data:image/png;base64,@ViewBag.Qr" class="img-fluid"/>
            </figure>
        </div>
    </section>
}

@if(ViewBag.Error != null)
{
    <p>@ViewBag.Error</p>
}