@{
    ViewData["Title"] = "Go&Use";
}
@model Acortador

<article class="text-center container my-5">
    <h1>ACORTA TU ENLACE</h1>
    <div class="row justify-content-center align-content-center">
        <form class="col-5 p-3" id="form_acortador" method="post" action="/Acortador/CrearAcortador">
            <div class=" text-start my-2 ">
                <label for="link" class="form-check px-0">Ingrese el link a acortar:</label>
                <input type="text" id="link" name="link" value="@Model?.Link" class="form-control" />
            </div>
            <div class="my-2">
                <button type="submit" id="btn_subac" class="btn btn-primary w-100">Acortar</button>
            </div>
        </form>
        <p id="message"></p>
    </div>
</article>

@if (ViewBag.Qr != null)
{
    <article class="container">
        <div class="row justify-content-center align-content-center">
            <p class="col-4 align-self-center">https://AcotadorURL.somee.com/@Model?.Id</p>
            <figure class="col-4">
                <img src="data:image/png;base64,@ViewBag.Qr" class="img-fluid"/>
            </figure>
        </div>
    </article>
}

@if(ViewBag.Error != null)
{
    <p>@ViewBag.Error</p>
}
<script src="~/js/site.js" asp-append-version="true"></script>