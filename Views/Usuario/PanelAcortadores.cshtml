@model List<Acortador>;
@{
    ViewData["Title"] = "Panel del Administrador";
}
<ul class="List-Enlace">
    @foreach (var ac in Model)
    {
        <li>
            <p>El id es: @ac.Id</p>
            <p>El Link es: <a href="@ac.Link">@ac.Link</a></p>
            
            @{
                if(ac.Lasttime == null)
                {
                    <p>Todavia no ha sido usado el enlace</p>
                }
                else
                {
                    <p>El ultimo uso ha sido: @ac.Lasttime</p>
                }
            }
            <a class="btn btn-danger w-100" href="/Administrador/EliminarEnlace?id=@ac.Id">Eliminar</a>
         </li>
    }
</ul>